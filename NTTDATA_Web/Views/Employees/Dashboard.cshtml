@model List<NTTDATA_Web.Models.Employee>
@{
    ViewBag.Title = "Dashboard";
}


<h4>Dashboard</h4>
<div class="row">
    <div class="col-md-4">


    </div>
    <div class="col-md-6">

    </div>
    <div class="col-md-2">

    </div>
</div>

<table class="table">
    <tr>
        <th>
            Emp Code
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Designation
        </th>
        <th>
            Salary
        </th>
        <th>Action </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Employee_Code }) |
                @Html.ActionLink("Details", "Details", new { id = item.Employee_Code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Employee_Code })
            </td>
        </tr>
    }
</table>

<a href="Employees/Create" class="btn btn-primary">Add New Employee</a>
